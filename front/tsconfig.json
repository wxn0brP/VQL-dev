{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "paths": {
            "#*": ["./src/*"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": true,
        "types": [
            "esbuild-style-plugin"
        ]
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}
